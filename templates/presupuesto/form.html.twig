{% extends 'base.html.twig' %}

{% block title %}{{parent()}}-Formulario{% endblock %}

{% block body %}
{{parent()}}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
  <h2>Elige fecha y salon para tu evento</h2>
    <h4>Buscar: </h4>
{{ form_start(form) }}

<label for="salon">Salones</label>
<select id="salonT" class="form-control">
</select> 
{{ form_end(form) }}      


 


{% endblock %}
{% block javascripts %}
{{parent()}}
<script src="{{ asset('bundles/fosjsrouting/js/router.min.js') }}"></script>
<script src="{{ path('fos_js_routing_js', { callback: 'fos.Router.setData' }) }}"></script>
<script src="{{ asset("js/ajax.js") }}"></script>
<script>
      $(window).ready(function(){
        $("#buscar").click(function(ev){
          ev.preventDefault();
          buscar();
        })
      })
    function buscar(){
      let datos={
        "fechaT":$("#fechaT").val(),
        /*"numPersonasT":$("#numPersonasT").val(),*/
        "salonT":$("#salonT").val()
       
      };
      window.location.href ="{{path('buscarR')}}"+"/"+JSON.stringify(datos);
    }
    </script>
{% endblock %}